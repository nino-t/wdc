worker_processes 1;
daemon off;

events {
  worker_connections 1024;
}

http {
  include       mime.types;
  default_type  application/octet-stream;

  sendfile        on;
  keepalive_timeout  65;

  server {
    listen <%= ENV["PORT"] || 3000 %>;

    root <%= ENV["HOME"] %>/public;

    location / {
      index index.html;
      try_files $uri $uri/ /index.html;
    }

    error_page 500 502 503 504 /error.html;
    location = /error.html {
      internal;
    }
  }
}
